{
  "action": {
    "default_title": "%app_name%",
    "default_popup": "./build/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": "Ctrl+U",
      "description": "Open popup application"
    }
  }
}